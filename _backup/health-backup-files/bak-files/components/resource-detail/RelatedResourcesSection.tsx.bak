"use client";

import React from 'react';
import {
  ArrowTopRightOnSquareIcon,
  ArrowPathIcon,
  LinkIcon
} from '@heroicons/react/24/outline';
import { HealthResource } from '../ResourceDetailView';

interface RelatedResourcesSectionProps {
  resource: HealthResource;
  relatedResources: HealthResource[];
  isLoading?: boolean;
  onViewResource: (resource: HealthResource) => void;
}

/**
 * RelatedResourcesSection Component
 * Displays resources that are related to the current resource
 */
export const RelatedResourcesSection: React.FC<RelatedResourcesSectionProps> = ({
  resource,
  relatedResources,
  isLoading = false,
  onViewResource
}) => {
  if (isLoading) {
    return (
      <div className="py-4 flex justify-center">
        <ArrowPathIcon className="h-6 w-6 text-[#1A2C5B] animate-spin" />
      </div>
    );
  }

  if (relatedResources.length === 0) {
    return null;
  }
  
  // Only show up to 3 related resources
  const displayResources = relatedResources.slice(0, 3);
  
  return (
    <div className="mt-6 pt-6 border-t border-gray-200">
      <h3 className="text-lg font-semibold text-[#1A2C5B] mb-3 flex items-center">
        <LinkIcon className="h-5 w-5 mr-2 text-[#1A2C5B]" />
        Related Resources
      </h3>
      
      <div className="space-y-3">
        {displayResources.map((relatedResource) => (
          <div 
            key={relatedResource.id || relatedResource._id} 
            className="bg-gray-50 p-3 rounded-lg hover:bg-gray-100 transition-colors cursor-pointer"
            onClick={() => onViewResource(relatedResource)}
          >
            <div className="flex justify-between items-center">
              <div>
                <h4 className="font-medium text-[#1A2C5B]">{relatedResource.title}</h4>
                <p className="text-sm text-gray-600 line-clamp-1">{relatedResource.description}</p>
              </div>
              <ArrowTopRightOnSquareIcon className="h-5 w-5 text-gray-400 flex-shrink-0" />
            </div>
          </div>
        ))}
      </div>
    </div>
  );
};

export default RelatedResourcesSection;

/**
 * Simplified Tab Navigation Component
 * 
 * A streamlined three-tab navigation system for the Health Resources section
 * that provides a clearer mental model for veterans using the site.
 */

"use client";

import React from 'react';
import { 
  MagnifyingGlassIcon, 
  BuildingLibraryIcon, 
  UserGroupIcon 
} from '@heroicons/react/24/outline';

interface SimplifiedTabProps {
  activeTab: string;
  onTabChange: (tabId: string) => void;
}

const SimplifiedTabNavigation: React.FC<SimplifiedTabProps> = ({ 
  activeTab, 
  onTabChange 
}) => {
  // Define our three main tabs
  const tabs = [
    {
      id: 'find-resources',
      label: 'Find Resources',
      icon: <MagnifyingGlassIcon className="h-5 w-5" />,
      description: 'Search and filter health resources tailored to your specific needs'
    },
    {
      id: 'va-benefits',
      label: 'VA Benefits',
      icon: <BuildingLibraryIcon className="h-5 w-5" />,
      description: 'Official VA healthcare benefits and programs'
    },
    {
      id: 'ngo-resources',
      label: 'NGO Resources',
      icon: <UserGroupIcon className="h-5 w-5" />,
      description: 'Non-governmental organization resources and support'
    }
  ];

  return (
    <div className="w-full">
      {/* Mobile dropdown for smaller screens */}
      <div className="md:hidden mb-6">
        <label htmlFor="tab-select" className="block text-sm font-medium text-gray-700 mb-2">
          Select Resource Type
        </label>
        <select
          id="tab-select"
          value={activeTab}
          onChange={(e) => onTabChange(e.target.value)}
          className="block w-full rounded-lg border-gray-300 py-3 pl-4 pr-10 text-base focus:border-blue-500 focus:outline-none focus:ring-blue-500 border shadow-sm"
          aria-label="Resource type selector"
        >
          {tabs.map((tab) => (
            <option key={tab.id} value={tab.id}>
              {tab.label}
            </option>
          ))}
        </select>
      </div>

      {/* Desktop tabs */}
      <div className="hidden md:flex w-full border-b border-gray-200">
        <div className="flex w-full justify-center space-x-1">
          {tabs.map((tab) => (
            <button
              key={tab.id}
              onClick={() => onTabChange(tab.id)}
              className={`
                flex-1 py-4 px-4 text-center rounded-t-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500
                ${activeTab === tab.id 
                  ? 'bg-white border-t border-l border-r border-gray-200 border-b-0 text-blue-700 font-medium shadow-sm' 
                  : 'text-gray-600 hover:text-gray-800 hover:bg-gray-50'}
              `}
              aria-selected={activeTab === tab.id}
              aria-controls={`${tab.id}-panel`}
              id={`${tab.id}-tab`}
              role="tab"
              tabIndex={activeTab === tab.id ? 0 : -1}
              aria-label={tab.description}
            >
              <div className="flex flex-col items-center justify-center">
                <div className="flex items-center justify-center mb-2">
                  <span className={`${activeTab === tab.id ? 'text-blue-600' : 'text-gray-500'}`}>
                    {tab.icon}
                  </span>
                </div>
                <span className="text-sm md:text-base font-medium">{tab.label}</span>
              </div>
            </button>
          ))}
        </div>
      </div>

      {/* Tab descriptions */}
      <div className="hidden md:block mt-4 mb-6">
        {tabs.map((tab) => (
          activeTab === tab.id && (
            <div key={`${tab.id}-desc`} className="text-center text-sm text-gray-600 max-w-2xl mx-auto">
              {tab.description}
            </div>
          )
        ))}
      </div>
    </div>
  );
};

export default SimplifiedTabNavigation;

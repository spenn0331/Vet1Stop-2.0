# AI Integration Environment Variables
# Copy this file to .env.local and fill in the values

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=1:your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-your-measurement-id

# MongoDB Configuration
MONGODB_URI="mongodb+srv://username:password@cluster0.example.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0"
MONGODB_DB="your-database-name"
MONGODB_COLLECTION="your-collection-name"

# xAI / Grok API Configuration
NEXT_PUBLIC_USE_MOCK_AI=false
# Primary key used by Medical Detective (Grok 4) and other server-side AI routes
XAI_API_KEY=xai-your-api-key-here
# Legacy keys (kept for backward compatibility)
NEXT_PUBLIC_GROK_API_KEY=xai-your-grok-api-key
GROK_API_KEY=xai-your-grok-api-key

# AI Feature Configuration
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_VOICE_COMMANDS=true
NEXT_PUBLIC_ENABLE_RECOMMENDATIONS=true
NEXT_PUBLIC_ENABLE_SUMMARIZATION=true
NEXT_PUBLIC_ENABLE_FORM_ASSISTANCE=true

# Voice Command Configuration
NEXT_PUBLIC_VOICE_COMMAND_WAKE_WORD="hey vet one stop"
